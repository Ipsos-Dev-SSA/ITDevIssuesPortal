@model IEnumerable<CallCentreFollowUps.Models.Issue>
@{
    ViewBag.Title = "Issues";
    Layout = "~/Views/Shared/_LayoutPayroll.cshtml";
}

<link href="~/Content/css/Picturecss.css" rel="stylesheet" />
<img src="~/Content/Images/IssuesLog.png" alt="Change Management Banner" class="portal-image" />



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Issues</title>

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap4.min.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <style>
        body {
            padding: 20px;
        }
    </style>
</head>
<body>

    <h2 class="mb-3 text-center" style="font-size: 36px; color: #007bff; font-weight: bold; text-transform: uppercase; letter-spacing: 2px; border-bottom: 2px solid #007bff; padding-bottom: 10px;">
        Manage Issues
    </h2>
    <a href="@Url.Action("Create")" class="btn btn-success mb-3">
        <i class="fas fa-plus"></i> Log an Issue
    </a>
    <table id="issuesTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Submitted By</th>
                <th>Assigned To</th>
                <th>Comment</th>
                <th>Attachments</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@(item.Status != null ? item.Status.Name : "No Status")</td>
                    <td>@item.SubmittedBy</td>
                    <td>@item.AssignedToUsername</td>
                    <td>@item.Comment</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.AttachmentPath))
                        {
                            var files = item.AttachmentPath.Split(',');
                            foreach (var file in files)
                            {
                                var fileName = System.IO.Path.GetFileName(file);
                                <div>
                                    <a href="@Url.Content(file)" target="_blank" class="btn btn-link p-0">
                                        ðŸ“Ž @fileName
                                    </a>
                                </div>
                            }
                        }
                        else
                        {
                            <span class="text-muted">No Files</span>
                        }
                    </td>

                    <td>
                        <a href="@Url.Action("Edit", new { id = item.IssueId })" class="btn btn-sm btn-primary">Update</a>
                        <a href="@Url.Action("Delete", new { id = item.IssueId })" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Scripts: jQuery then DataTables -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#issuesTable').DataTable({
                pageLength: 5,
                lengthChange: false,
                searching: true,
                ordering: true,
                info: true
            });
        });
    </script>

</body>
</html>

