@model IEnumerable<CallCentreFollowUps.Models.Issue>

@{
    ViewBag.Title = "CX Issue List";
    Layout = "~/Views/Shared/_LayoutPayroll.cshtml";
}
<br />
<link href="~/Content/css/Picturecss.css" rel="stylesheet" />
<img src="~/Content/Images/IssuesLog.png" alt="Change Management Banner" class="portal-image" />
<h2 class="mb-3 text-center" style="font-size: 36px; color: #007bff; font-weight: bold; text-transform: uppercase; letter-spacing: 2px; border-bottom: 2px solid #007bff; padding-bottom: 10px;">
    CX Issue List
</h2>

<a href="@Url.Action("Create")" class="btn btn-success mb-3">
    <i class="fas fa-plus"></i> Log New Issue
</a>

<div class="table-responsive">
    <table id="cxIssuesTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Submitted By</th>
                <th>Assigned To</th>
                <th>Created Date</th>
                <th>Completion Date</th>
                <th>Attachments</th>
                <th>Comment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center">No issues found.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
        <tr>
            <td>@item.Title</td>
            <td>@(item.Status != null ? item.Status.Name : "Unknown")</td>
            <td>@item.Priority</td>
            <td>@item.SubmittedBy</td>
            <td>@item.AssignedToUsername</td>
            <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
            <td>@item.CompletionDate</td>
            <td>
                @if (!string.IsNullOrEmpty(item.AttachmentPath))
                {
                    var files = item.AttachmentPath.Split(',');
                    foreach (var file in files)
                    {
                        var fileName = System.IO.Path.GetFileName(file);
                        <div>
                            <a href="@Url.Content("~" + file.Trim())" target="_blank" class="btn btn-link p-0">
                                📎 @fileName
                            </a>
                        </div>
                    }
                }


                else
                {
                    <span class="text-muted">No Files</span>
                }
            </td>
            <td>@item.Comment</td>
            <td>

                <a href="@Url.Action("Assign", new { id = item.IssueId })" class="btn btn-success btn-sm">Assign</a>

            </td>
        </tr>
                }
            }
        </tbody>
    </table>
    </div>

    @section Scripts {
        <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap4.min.css" />
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>

        <script>
            $(document).ready(function () {
                $('#cxIssuesTable').DataTable({
                    pageLength: 5,             
                    lengthChange: false,
                    searching: true,            
                    ordering: true,             
                    info: false
                });
            });
        </script>
    }
