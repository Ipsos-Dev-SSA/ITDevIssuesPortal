@{
    ViewBag.Title = "Change Management Portal";
    Layout = "~/Views/Shared/_LayoutPayroll.cshtml";
}

<style>
    .container {
        background: rgba(255, 255, 255, 0.98);
        border-radius: 10px;
        padding: 30px;
        margin-top: 40px;
    }

    .portal-image {
        display: block;
        width: 100%;
        max-width: 2000px;
        height: auto;
        max-height: 40vh;
        margin: 20px auto;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        object-fit: contain;
    }

    h2, .lead {
        color: #003366;
        text-align: center;
        text-shadow: 1px 1px 2px #ffffff;
    }
</style>


<div class="container">
    <h2 class="mb-4">Welcome to the Change Management Portal</h2>
    

    <!-- ✅ Image displayed inside content -->
    <img src="~/Content/Images/IssuesLog.png" alt="Change Management Banner" class="portal-image" />

 

    <div class="text-center mt-4">
        <small class="text-muted">© @DateTime.Now.Year Ipsos MTN Change Management</small>
    </div>
</div>
