@model IEnumerable<CallCentreFollowUps.Models.Issue>
<br />


<br />
@{
    ViewBag.Title = "Review Issues";
    Layout = "~/Views/Shared/_LayoutPayroll.cshtml";
}
<br />
<br />
<link href="~/Content/css/Picturecss.css" rel="stylesheet" />
<img src="~/Content/Images/IssuesLog.png" alt="Change Management Banner" class="portal-image" />
<h2 class="mb-3 text-center" style="font-size: 36px; color: #007bff; font-weight: bold; text-transform: uppercase; letter-spacing: 2px; border-bottom: 2px solid #007bff; padding-bottom: 10px;">
    Review Presented Issues
</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table id="reviewIssuesTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Submitted By</th>
            <th>Assogned To</th>
            <th>Created Date</th>
            <th>Comment</th>
            <th>Completion Date</th>
            @*<th>Actions</th>*@
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="6" class="text-center">No issues available for review.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
    <tr>
        <td>@item.Title</td>
        <td>@(item.Status?.Name ?? "Unknown")</td>
        <td>@item.Priority</td>
        <td>@item.SubmittedBy</td>
        <td>@item.AssignedToUsername</td>
        <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
        <td>@item.Comment</td>
        <td>@item.CompletionDate</td>
        @*<td>
            <a href="@Url.Action("Approve", "Client", new { id = item.IssueId })" class="btn btn-sm btn-success">Approve</a>
            <a href="@Url.Action("Reject", "Client", new { id = item.IssueId })" class="btn btn-sm btn-danger">Reject</a>
        </td>*@
    </tr>
            }
        }
    </tbody>
</table>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap4.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#reviewIssuesTable').DataTable({
                pageLength: 5,
                lengthChange: false,
                searching: true,
                ordering: true,
                info: false
            });
        });
    </script>
}
