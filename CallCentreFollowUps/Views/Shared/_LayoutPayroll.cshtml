@{
    var userName = HttpContext.Current.User.Identity.Name;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ITDev Issues Portal</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

    <!-- DataTables -->
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />

    <!-- Local Styles -->
    <link href="@Url.Content("~/Content/css/theme.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/font-face.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/vendor/font-awesome-5/css/fontawesome-all.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/vendor/mdi-font/css/material-design-iconic-font.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/vendor/animsition/animsition.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/vendor/wow/animate.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/vendor/css-hamburgers/hamburgers.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/vendor/slick/slick.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/vendor/select2/select2.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/vendor/perfect-scrollbar/perfect-scrollbar.css")" rel="stylesheet" />

    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 80px;
            background: #fff;
            border-right: 1px solid #dee2e6;
        }

        main {
            margin-left: 250px;
            padding: 30px;
        }

        .nav-link {
            font-size: 1.1rem;
            padding: 12px 20px;
        }

        .hover-effect:hover {
            background-color: #f1f1f1;
            text-decoration: none;
        }

        .header__logo img {
            max-height: 60px;
        }

        .account-wrap img {
            height: 40px;
            width: 40px;
            border-radius: 50%;
        }

        .header3-wrap {
            padding: 15px 30px;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <!-- Header -->
        <header class="bg-white shadow-sm fixed-top">
            <div class="d-flex justify-content-between align-items-center px-4 py-3">
                <div class="header__logo">
                    <a href="#">
                        <img src="@Url.Content("~/Content/images/icon/IpsosSDR.png")" alt="SDR" />
                    </a>
                </div>
				
			
                <div class="d-flex align-items-center">
                    <div class="me-3 text-end">
					    <div class="small text-muted">Welcome</div>
                        <div class="fw-bold text-primary">@ViewBag.UserName</div>

                    </div>
                  
                    @*<a href="@Url.Action("UpdatePassword", "User")" class="btn btn-success btn-sm me-2">
                        <i class="fas fa-edit"></i> Update Password
                    </a>
                    <a href="@Url.Action("Login", "Home")" class="btn btn-danger btn-sm">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>*@
                </div>
            </div>
        </header>


        <!-- Sidebar -->
        <div class="row">
            <nav class="col-md-3 col-lg-2 d-md-block sidebar pt-5">
                <div class="position-sticky mt-4">
				</br>
                    @*<a class="nav-link d-flex align-items-center gap-2 px-3 py-2 hover-effect" href="@Url.Action("LandingPage", "Home")" style="font-weight: 500; color: #333;">
                        <i class="fa-solid fa-house fa-lg text-primary"></i>
                        <span>Navigate to Dashboard</span>
                    </a>*@

                    @if (ViewBag.RoleName == "Supervisor Role")
                    {
                        <div class="mt-4">
                            <ul class="nav flex-column px-2">
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "User")">👥 Manage Users</a></li>
                                <li class="nav-item"><a class="nav-link" href="@Url.Action("GetTopIssueHistories", "Issues")">📝 Issues History</a></li>
                            </ul>
                        </div>
                    }
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="@Url.Content("~/Content/vendor/slick/slick.min.js")"></script>
    <script src="@Url.Content("~/Content/vendor/wow/wow.min.js")"></script>
    <script src="@Url.Content("~/Content/vendor/animsition/animsition.min.js")"></script>
    <script src="@Url.Content("~/Content/vendor/perfect-scrollbar/perfect-scrollbar.js")"></script>
    <script src="@Url.Content("~/Content/vendor/chartjs/Chart.bundle.min.js")"></script>
    <script src="@Url.Content("~/Content/vendor/select2/select2.min.js")"></script>
    <script src="@Url.Content("~/Scripts/js/main.js")"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
