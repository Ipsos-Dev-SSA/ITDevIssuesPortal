@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>MTN Issues Portal - Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom Fonts and Styles -->
    <link href="@Url.Content("~/Content/css/font-face.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/vendor/font-awesome-5/css/fontawesome-all.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/vendor/mdi-font/css/material-design-iconic-font.min.css")" rel="stylesheet" />

    <style>
        body {
            background-color: #f2f2f2;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-container {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-box {
            background-color: #fff;
            padding: 40px 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            min-width: 360px;
            max-width: 420px;
            width: 100%;
        }

        .login-logo {
            text-align: center;
            margin-bottom: 25px;
        }

            .login-logo img {
                height: 55px;
            }

        .form-label {
            font-weight: 600;
        }

        .form-control {
            height: 45px;
            border-radius: 6px;
        }

        .btn-login {
            background-color: #28a745;
            border: none;
            color: white;
            font-weight: bold;
            border-radius: 6px;
            height: 45px;
        }

            .btn-login:hover {
                background-color: #218838;
            }

        .alert-danger {
            font-size: 0.95rem;
        }
    </style>
</head>
<body>
    <div class="container login-container">
        <div class="login-box">
            <div class="login-logo">
                <img src="@Url.Content("~/Content/images/icon/IpsosSDR.png")" alt="Ipsos Logo" />
               
            </div>

            @* Display error message if available *@
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.ErrorMessage
                </div>
            }

            @using (Html.BeginForm("SignIn", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input class="form-control" type="text" name="username" id="username" placeholder="Enter username" required />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input class="form-control" type="password" name="password" id="password" placeholder="Enter password" required />
                </div>

                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" name="remember" id="remember" />
                    <label class="form-check-label" for="remember">Remember Me</label>
                </div>

                <button type="submit" class="btn btn-login w-100">Login</button>
            }
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
