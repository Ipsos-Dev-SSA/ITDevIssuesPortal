@model CallCentreFollowUps.Models.Issue

@{
    ViewBag.Title = "CX Issue Assignment";
    Layout = "~/Views/Shared/_LayoutPayroll.cshtml";
}

<h2 class="mb-4">Assign Issue: <span style="color:#007bff">@Model.Title</span></h2>

@using (Html.BeginForm("Assign", "Cx", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IssueId)



    <div class="form-group">
        <label for="teamId">Assign to Team</label>
        @Html.DropDownList("teamId", ViewBag.TeamList as SelectList, "Select Team", new { @class = "form-control" })
    </div>


    <div class="form-group">
        <label for="newStatusId">Change Status</label>
        @Html.DropDownList("newStatusId", ViewBag.StatusList as SelectList, "-- Select Status --", new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label for="comment">Comment</label>
        <textarea name="comment" class="form-control" rows="4" placeholder="Enter your comment here..."></textarea>
    </div>
    <br />
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>

    <a href="@Url.Action("Index", "Cx")" class="btn btn-secondary ml-2">Back to List</a>
    <br />
    <br />
    <h4>Issue History</h4>
    <table id="issueHistoryTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Status</th>
                <th>Changed By</th>
                <th>Date</th>
                <th>Comments</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.IssueHistory != null)
            {
                int i = 1;
                foreach (var item in ViewBag.IssueHistory)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.StatusId</td>
                        <td>@item.ChangedBy</td>
                        <td>@item.ChangeDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@item.Comments</td>
                    </tr>
                    i++;
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No history available for this issue.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Scripts at the bottom -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#issueHistoryTable').DataTable({
                "pageLength": 5,
                "order": [[3, "desc"]],
                "lengthChange": false,
                "language": {
                    "emptyTable": "No history available for this issue."
                }
            });
        });
    </script>

}
